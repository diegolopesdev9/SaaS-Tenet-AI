modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
expertMode = true

[workflows]
runButton = "Run API"

[[workflows.workflow]]
name = "Run API"
author = 47643903
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
