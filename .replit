modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
expertMode = true

[workflows]
runButton = "Run API"

[[workflows.workflow]]
name = "Run API"
author = 47643903
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Run Frontend"
author = 47643903
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
